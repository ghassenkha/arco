{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index </h1><a class="btn btn-info" href="{{ path('article_import') }}" role="button">Update</a>

    <table id="example" class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>No_</th>
                <th>Description</th>
                <th>Unity</th>
                <th>Replenishment_System</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.No }}</td>
                <td>{{ article.Description }}</td>
                <td>{{ article.unity }}</td>
                <td>{{ article.ReplenishmentSystem }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
