{% extends 'base.html.twig' %}

{% block title %}Besoin index{% endblock %}

{% block body %}




    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-umbrella icon-gradient bg-sunny-morning">
                    </i>
                </div>
                <div> <h2>Besoin</h2>
                    <div class="page-title-subheading ">NB : Vous devez mettre à jour les données avec le fichier <b>"Besoin.xlsx"</b> dans le dossier <b  >Uploads</b>
                    </div>
                    <div class="page-title-subheading ">le bouton est pour calculer <b>la quantité selon la periode selectionné</b>
                    </div>
                </div>
            </div>
            <div class="page-title-actions">
                <a class="btn btn-info btn-shadow " href="{{ path('besoin_import') }}" role="button">Update</a>
                <a class="btn btn-alternate btn-shadow " href="{{ path('elcat') }}" role="button">Calule CBN</a>
                <div class="page-title-subheading "><b>Nombre d'article: {{ count }}</b></div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="main-card mb-12 card ">

                <table id="" class="mb-6 table table-hover table-striped fixed-table-toolbar ">
                    <thead>
                    <tr>
                        <div class="form-group clearfix">
                            <th></th>
                            <th >Selectionné la periode :</th>
                            {{ include('period/_form.html.twig', {'button_label': 'Update'}) }}
                        </div>
                    </tr>

                    <tr>
                        <td>No</td>
                        <td>Description</td>
                        <td>S1</td>
                        <td>S2</td>
                        <td>S3</td>
                        <td>S4</td>
                        <td>S5</td>
                        <th>S6</th>
                        <th>S7</th>
                        <th>S8</th>
                        <th>S9</th>
                        <th>S10</th>
                        <th>S11</th>
                        <th>S12</th>
                        <th>S13</th>
                        <th>S14</th>
                        <th>S15</th>
                        <th>S16</th>
                        <th>Qt total selectioné</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for besoin in besoins %}
                        <tr>
                            <td>{{ besoin.no }}</td>
                            <td>{{ besoin.description }}</td>
                            <td style="background-color:#eed2c8">{{ besoin.s1 }}</td>
                            <td style="background-color:#eed2c8">{{ besoin.s2 }}</td>
                            <td >{{ besoin.s3 }}</td>
                            <td>{{ besoin.s4 }}</td>
                            <td>{{ besoin.s5 }}</td>
                            <td>{{ besoin.s6 }}</td>
                            <td>{{ besoin.s7 }}</td>
                            <td>{{ besoin.s8 }}</td>
                            <td>{{ besoin.s9 }}</td>
                            <td>{{ besoin.s10 }}</td>
                            <td>{{ besoin.s11 }}</td>
                            <td>{{ besoin.s12 }}</td>
                            <td>{{ besoin.s13 }}</td>
                            <td>{{ besoin.s14 }}</td>
                            <td>{{ besoin.s15 }}</td>
                            <td>{{ besoin.s16 }}</td>
                            <td>{{ besoin.somme|number_format(0, '.', ' ') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="20">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>


        </div>

    </div>

{% endblock %}
