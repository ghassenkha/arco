            <tr>
                <th>No</th>
                <th>Qt</th>
                <th>stock</th>
            </tr>
        </thead>
        <tbody>
        {% for achat in achats %}
            <tr>
                <td class="text-danger">{{ achat.no }}</td>
                <td>{{ achat.qt }}</td>
